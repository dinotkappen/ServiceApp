<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Large red circle -->
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <solid android:color="#ffffff" />
            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>

    <!-- Small black circle -->
    <item android:right="3dp"
        android:left="-3dp"
        android:top="3dp"
        android:bottom="-3dp">
        <shape android:shape="oval">
            <stroke android:color="@android:color/transparent"
                android:width="35dp"/>
            <solid android:color="#ffffff"/>
            <size
                android:width="5dp"
                android:height="5dp"/>
        </shape>
    </item>
</layer-list>